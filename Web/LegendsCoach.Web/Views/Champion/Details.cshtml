@model ChampionDetailsViewModel
@{
    ViewData["Title"] = "Details";
}

<div class="card mt-4 text-center">
    <img src="@Model.ImageUrl" alt="image" />
    <div class="card-body h-100">
        <h5 class="card-title">@Model.ChampionName</h5>
        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">@Model.Origin</li>
        <li class="list-group-item">@Model.Power</li>
        <li class="list-group-item">@Model.Level</li>
        <li class="list-group-item">@Model.Description</li>
    </ul>
    <div class="card-body">
        <a href="#" class="card-link">Card link</a>
        <a href="#" class="card-link">Another link</a>
    </div>
</div>
