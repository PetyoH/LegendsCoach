@model PlayerDetailsViewModel
@{
    ViewData["Title"] = "Details";
}

<div class="row justify-content-center mt-5 pt-5">
    <div class="card w-75 mt-4 pt-4">
        <div class="row g-0">
            <div class="col-md-16">
                <div class="card-body">
                    <h5 class="card-title text-center pb-5">@Model.GameName</h5>
                    <p class="card-text pb-5">@Model.Description</p>
                    <ul class="list-group list-group-flush pt-4 pb-4 mb-2 text-center">
                        <li class="list-group-item">Rank: @Model.RankName</li>
                        <li class="list-group-item">Position: @Model.PositionName</li>
                        <li class="list-group-item">Level: @Model.Level</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>  