@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="row">

    <section>
        <form id="account" method="post">
            <div class="container py-5 h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                        <div class="card bg-dark text-white" style="border-radius: 1rem;">
                            <div class="card-body p-5 text-center">

                                <div class="mb-md-5 mt-md-4 pb-5">

                                    <h2 class="fw-bold mb-2 text-uppercase">@ViewData["Title"]</h2>
                                    <p class="text-white-50 mb-5">Please enter your login and password!</p>
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                    <div class="form-outline form-white mb-4">

                                        <label asp-for="@Model.UserName" class="form-label" for="typeUserNameX"></label>
                                        <input asp-for="@Model.UserName" type="username" id="typeUserNameX" class="form-control form-control-lg" />
                                        <span asp-validation-for="@Model.UserName" class="text-danger"></span>

                                    </div>

                                    <div class="form-outline form-white mb-4">

                                        <label asp-for="@Model.Email" class="form-label" for="typeEmailX"></label>
                                        <input asp-for="@Model.Email" type="email" id="typeEmailX" class="form-control form-control-lg" />
                                        <span asp-validation-for="@Model.Email" class="text-danger"></span>

                                    </div>

                                    <div class="form-outline form-white mb-4">
                                        <label asp-for="@Model.Password" type="password" class="form-label" for="typePasswordX"></label>
                                        <input asp-for="@Model.Password" type="password" id="typePasswordX" class="form-control form-control-lg" />
                                        <span asp-validation-for="@Model.Password" class="text-danger"></span>
                                    </div>

                                    <div class="form-outline form-white mb-4">

                                        <label asp-for="@Model.ConfirmPassword" class="form-label" for="typeConfirmPasswordX"></label>
                                        <input asp-for="@Model.ConfirmPassword" type="password" id="typeConfirmPasswordX" class="form-control form-control-lg" />
                                        <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>

                                    </div>

                                    <button class="btn btn-outline-light btn-lg px-5" type="submit">Register</button>
                                </div>

                                <div>
                                    <p class="mb-0">
                                        Have an account? <a asp-controller="ApplicationUser" asp-action="Login" class="text-white-50 fw-bold">Log in</a>
                                    </p>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </section>

